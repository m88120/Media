
@{
    ViewBag.Title = "Payment Failed";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}
<link href="~/assets/global/plugins/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    address, dl, ol, p, ul {
        margin-bottom: 0;
    }
</style>
<section class="main-content-area">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-danger text-center" role="alert">
                    <h4 class="alert-heading">Oops!</h4>

                    @if (TempData["Message1"].ToString() == "")
                    {
                        <p class="mb-0">
                            Your payment has been canceled.
                        </p>
                    }
                    else
                    {
                        <p class="mb-0">
                            @Html.Raw(TempData["Message1"])
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
