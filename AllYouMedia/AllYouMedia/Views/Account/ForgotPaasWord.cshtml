@using AllYouMedia.Models
@model ForgotPaasWordModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}


<section class="main-content-area">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
                <div class="checkout-main-area">
                    <div class="panel-group greentech-panel-group greentech-panel-icon" id="greentechaccordion">
                        <!-- START SINGLE PANEL -->
                        <div class="greentech-panel panel panel-default">
                            <div id="collapseOne" class="panel-collapse collapse in">
                                <div class="panel-body greentech-panel-body">
                                    <div class="checkout-method">
                                        <div class="row">
                                            <div class="method-right col-xs-12 col-sm-6">
                                                @if (ViewBag.forgot)
                                                {
                                                    using (Ajax.BeginForm("ForgotPaasWord", "Account", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Login" }))
                                                    {
                                                        <h2>Forgot Password</h2>
                                                        <div class="form-group">
                                                            <label>Login Name<sup>*</sup></label>
                                                            @Html.TextBoxFor(m => m.LoginName, new { @class = "form-control", placeholder = "Enter User Login Name" })
                                                            @Html.ValidationMessageFor(m => m.LoginName, "", new { @class = "validation" })
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <input value="Submit" class="btn btn-primary pull-right" type="submit">
                                                                <a href="/login" class="btn btn-default pull-left">Login</a>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                                @if (ViewBag.code)
                                                {
                                                    using (Ajax.BeginForm("ResetPaasWord", "Account", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Login" }))
                                                    {
                                                        <h2>Reset Paasword</h2>
                                                        <div class="form-group">
                                                            <label>New Password<sup>*</sup></label>
                                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter New Password" })
                                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation" })
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Confirm Password<sup>*</sup></label>
                                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Enter Confirm Password" })
                                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "validation" })
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.HiddenFor(m => m.Code)
                                                        </div>
                                                        <div class="">
                                                            <input type="submit" value="Reset Password" class="add-tag-btn" />
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

