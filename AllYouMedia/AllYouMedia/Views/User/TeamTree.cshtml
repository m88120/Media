@section scripts{
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/User/TeamTreeList',
                type: 'POST',
                data: {},
                success: function (returnData) {
                    if (returnData.Result == "OK") {
                        var tree = returnData.UserTree;
                        var mainLI = $("#mainTreeLI"); mainLI.empty();
                        enumrateUserTree(tree.TreeNode, mainLI);
                        bindUIEvents();
                    } else alert("Ops! Something went wrong. Please try again later.");
                },
                error: function () { alert("Ops! Something went wrong. Please try again later."); }
            });
        });
        function enumrateUserTree(TreeNode, treeLI) {
            treeLI.append('<i class="fa fa-info team-info" title="Info" onclick="getUserInfo(' + TreeNode.AspNetUserID + ');"></i><span><i class="fa' + (TreeNode.ChildNodes.length > 0 ? ' fa-minus-square-o' : '') + '" style="color: #06c706;"></i> ' + TreeNode.Name + ' (' + TreeNode.UserName + ')' + '</span>');
            if (TreeNode.ChildNodes.length > 0) {
                var childUL = $('<ul></ul>'); treeLI.append(childUL);
                for (var i = 0; i < TreeNode.ChildNodes.length; i++) {
                    var childLI = $('<li></li>'); childUL.append(childLI);
                    enumrateUserTree(TreeNode.ChildNodes[i], childLI);
                }
            }
        }
        function bindUIEvents() {
            $('.tree li:has(ul)').addClass('parent_li').find(' > span').attr('title', 'Collapse this branch');
            $('.tree li.parent_li > span').on('click', function (e) {
                var children = $(this).parent('li.parent_li').find(' > ul > li');
                if (children.is(":visible")) {
                    children.hide('fast');
                    $(this).attr('title', 'Expand this branch').find(' > i').addClass('fa-plus-square-o').removeClass('fa-minus-square-o');
                } else {
                    children.show('fast');
                    $(this).attr('title', 'Collapse this branch').find(' > i').addClass('fa-minus-square-o').removeClass('fa-plus-square-o');
                }
                e.stopPropagation();
            });
        }
        function getUserInfo(AspNetUserID) {
            $.ajax({
                url: '/User/GetUserInfo',
                type: 'POST',
                data: { AspNetUserID: AspNetUserID },
                success: function (returnData) {
                    if (returnData.Result == "OK") {
                        $("#td_UserDetail_LEVELNAME").text(returnData.Data.LEVELNAME);
                        $("#td_UserDetail_USERNAME").text(returnData.Data.USERNAME);
                        $("#td_UserDetail_RECRUITER").text(returnData.Data.RECRUITER);
                        $("#td_UserDetail_RECRUITERNAME").text(returnData.Data.RECRUITERNAME);
                        $("#td_UserDetail_TOTALONTEAM").text(returnData.Data.TOTALONTEAM);
                        $("#td_UserDetail_GROSSPROFITS").text(returnData.Data.GROSSPROFITS);
                        $("#td_UserDetail_NETPROFITTOYOU").text(returnData.Data.NETPROFITTOYOU);
                        $("#userInfoModal").modal();
                    } else alert("Ops! Something went wrong. Please try again later.");
                },
                error: function () { alert("Ops! Something went wrong. Please try again later."); }
            });
        }
    </script>
