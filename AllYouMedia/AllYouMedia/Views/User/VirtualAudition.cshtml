
@{
    ViewBag.Title = "Virtual Auditions";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<link href="/Content/AdminLTE/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
<link href="/Content/AdminLTE/plugins/datatables/Buttons-1.5.0/css/buttons.bootstrap.css" rel="stylesheet" />
<link href="/Content/AdminLTE/plugins/datatables/Editor-2018-01-02-1.7.0/css/editor.bootstrap.css" rel="stylesheet" />
<link href="/Content/AdminLTE/plugins/datatables/Select-1.2.4/css/select.bootstrap.min.css" rel="stylesheet" />
<style>

    td.details-control {
        background: url('/Content/Images/details_open.png') no-repeat center center;
        cursor: pointer;
    }

    tr.shown td.details-control {
        background: url('/Content/Images/details_close.png') no-repeat center center;
    }
    td{
        font-weight:bold
    }
    .btn-btn-primary {
        background-color: #00A5E7 !important;
        height: 50px;
        width: 292px;
        font-size: 20px;
        margin-bottom: 10px;
    }
    .Info-lement-style {
        background-color: #3B8DBC;
        color: white;
        padding: 2px 7px;
    }
</style>
@*<h2>Coming Soon</h2>*@
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="box">
            <div class="box-body box-profile" style="overflow:hidden;clear:both;">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="dotted" id="lblKeyword">Keyword</label>
                        <input type="text" name="txtKeyword" value="" placeholder="Search by Name or Keyword" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="dotted" id="lblIndustry">Industry</label>
                        <select class="form-control" name="ddIndustry">
                            <option></option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="dotted" id="lblIndustry">Location</label>
                        <select class="form-control" name="ddIndustry">
                            <option></option>
                        </select>
                    </div>
                    <button class="btn">Search</button>
                </div>
                <div class="col-md-6 text-center">
                    <div class="col-md-12 text-center">
                        <button class="btn btn-primary btn-btn-primary">Host an Event</button>
                    </div>
                    <div class="col-md-12 text-center">
                        <button class="btn btn-primary btn-btn-primary">RECEIVE AUDITION ALERTS</button>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="box">
                <div class="box-header">
                    @*<h3 class="box-title">Sold Items</h3>*@
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div>
                        <div class="table-responsive">
                            <table id="VirtualAudition" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Audition Title &nbsp;&nbsp;<i class="fa fa-info Info-lement-style"></i></th>
                                        <th>Location  &nbsp;&nbsp;<i class="fa fa-info Info-lement-style"></i></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Seeking Models For Various Position</td>
                                        <td>United States</td>

                                        <td><button class="btn">View</button></td>
                                    </tr>
                                    <tr>
                                        <td>I am looking for 5 singers</td>
                                        <td>Atlanta, Georgia, USA</td>

                                        <td><button class="btn">View</button></td>
                                    </tr>
                                    <tr>
                                        <td>Action Auditions for an Action Movies</td>
                                        <td>Michigan, USA</td>

                                        <td><button class="btn">View</button></td>
                                    </tr>
                                    <tr>
                                        <td>We need 20 dancers for ballet</td>
                                        <td>Manhatten, New york, USA</td>

                                        <td><button class="btn">View</button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div>
        </div>
    </div>

    @section scripts{
        <script src="/Content/AdminLTE/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
        <script src="/Content/AdminLTE/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
        <script src="~/Content/AdminLTE/plugins/datatables/Buttons-1.5.0/js/dataTables.buttons.js"></script>
        <script src="~/Content/AdminLTE/plugins/datatables/Buttons-1.5.0/js/buttons.bootstrap.js"></script>
        @*<script src="~/Content/AdminLTE/plugins/datatables/Editor-2018-01-02-1.7.0/js/dataTables.editor.min.js"></script>
            <script src="~/Content/AdminLTE/plugins/datatables/Editor-2018-01-02-1.7.0/js/editor.bootstrap.min.js"></script>*@
        <script src="~/Content/AdminLTE/plugins/datatables/Select-1.2.4/js/dataTables.select.min.js"></script>
        <script src="~/Content/AdminLTE/plugins/datatables/customEditors.js"></script>
        <script src="~/Scripts/parsley.min.js"></script>
