@model AllYouMedia.Areas.Admin.Models.EventModel
@{
    ViewBag.Title = "Event";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="profile-contain">
    <div class="col-md-12">
        <div class="col-xl-12 col-md-12 col-xs-12">
            <div class="content">
                <div class="row">
                    <div class="col-xl-5 col-md-5 col-xs-12">
                        @using (Ajax.BeginForm("Event", "Admin", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Event" }, new { enctype = "multipart/form-data" }))
                        {
                            <div id="Event" class="">
                                <h4 class="page-content-title">Add New Event</h4>
                                <div class="well">
                                    <div class="user-name-profile col-xl-12 col-md-12 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Event Name :</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.EventName, new { @class = "form-control", placeholder = "Enter Event Name", maxlength = "50" })
                                            @Html.ValidationMessageFor(model => model.EventName, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-6 col-md-6 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Country :</div>
                                        <div class="form-group">
                                            @Html.DropDownListFor(model => model.CountryList, new SelectList(Model.CountryList, "Value", "Text", ViewData["CountryList"]), new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.CountryList, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-6 col-md-6 col-xs-12">
                                        <div class="left-name-profile float-xs-left">State :</div>
                                        <div class="form-group">
                                            @Html.DropDownListFor(model => model.StateList, new SelectList(Model.StateList, "Value", "Text", ViewData["StateList"]), new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.StateList, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="user-name-profile col-xl-6 col-md-6 col-xs-12">
                                        <div class="left-name-profile float-xs-left">City :</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.City, new { @class = "form-control", placeholder = "Enter City", maxlength = "50" })
                                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-6 col-md-6 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Venue :</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Venue, new { @class = "form-control", placeholder = "Enter Venue", maxlength = "50" })
                                            @Html.ValidationMessageFor(model => model.Venue, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="user-name-profile col-xl-12 col-md-12 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Host:</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Host, new { @class = "form-control", placeholder = "Enter Host", maxlength = "50" })
                                            @Html.ValidationMessageFor(model => model.Host, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-4 col-md-4 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Performance :</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Performance, new { @class = "form-control", placeholder = "Enter Performance", maxlength = "3" })
                                            @Html.ValidationMessageFor(model => model.Performance, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-4 col-md-4 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Seat Capacity :</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.SeatCapacity, new { @class = "form-control", placeholder = "Enter Seat Capacity", maxlength = "5" })
                                            @Html.ValidationMessageFor(model => model.SeatCapacity, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-4 col-md-4 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Fee :</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Fee, new { @class = "form-control", placeholder = "Enter Fee", maxlength = "10" })
                                            @Html.ValidationMessageFor(model => model.Fee, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-xl-12 col-md-12 col-xs-12">
                                        <div class="row">
                                            <div class="user-name-profile col-xl-6 col-md-6 col-xs-6">
                                                <div class="left-name-profile float-xs-left">DateFrom :</div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.DateFrom, new { @class = "datepicker form-control", placeholder = "Enter DateFrom", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.DateFrom, "", new { @class = "validation" })
                                                </div>
                                            </div>
                                            <div class="user-name-profile col-xl-6 col-md-6 col-xs-6">
                                                <div class="left-name-profile float-xs-left">DateTo :</div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.DateTo, new { @class = "datepicker form-control", placeholder = "Enter DateTo", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "validation" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-12 col-md-12 col-xs-12">
                                        <div class="row">
                                            <div class="user-name-profile col-xl-6 col-md-6 col-xs-6">
                                                <div class="left-name-profile float-xs-left">TimeFrom :</div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.TimeFrom, new { @class = "time form-control", placeholder = "Enter TimeFrom", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.TimeFrom, "", new { @class = "validation" })
                                                </div>

                                            </div>
                                            <div class="user-name-profile col-xl-6 col-md-6 col-xs-6">
                                                <div class="left-name-profile float-xs-left">TimeTo :</div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.TimeTo, new { @class = "time form-control", placeholder = "Enter TimeTo", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.TimeTo, "", new { @class = "validation" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-12 col-md-12 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Remark :</div>
                                        <div class="form-group">
                                            @Html.TextAreaFor(model => model.Remark, new { @class = "form-control", placeholder = "Enter Remark", @rows = "4", maxlength = "500" })
                                            @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-12 col-md-12 col-xs-12">
                                        <div class="left-name-profile float-xs-left">MapUrl :</div>
                                        <div class="form-group">
                                            @Html.TextAreaFor(model => model.MapUrl, new { @class = "form-control", placeholder = "Enter MapUrl", @rows = "2", maxlength = "500" })
                                            @Html.ValidationMessageFor(model => model.MapUrl, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-12 col-md-12 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Event Image :</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.file, "", new { @class = "form-control", @type = "file" })
                                            @Html.ValidationMessageFor(model => model.file, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-4 col-md-4 col-xs-6">
                                        <div class="left-name-profile float-xs-left">Status :</div>
                                        <div class="form-group">
                                            @Html.CheckBoxFor(model => model.Status)
                                            <span>Active/Inactive</span>
                                        </div>
                                    </div>
                                    <div id="DivImageurl" class="user-name-profile col-xl-4 col-md-4 col-xs-6 hidden">
                                        <div class="left-name-profile float-xs-left">Current Image :</div>
                                        <div class="form-group">
                                            <img id="ImageUrl" name="ImgUrl" src="" />
                                        </div>
                                    </div>
                                    <div class="divider-lg-spacing"></div>
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="tab-pane active btn-margin" id="basic-buttons">
                                            <input id="Save" type="submit" name="actionType" value="Add" class="btn btn-primary" />
                                        </div>
                                    </div>
                                    <div class="divider15"></div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-xl-7 col-md-7 col-xs-12">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <h4 class="page-content-title">Event Report</h4>
                            @Html.Partial("~/Areas/Admin/Views/Admin/_EventReport.cshtml")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#CountryList").change(function () {
            $("#StateList").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetStates", "Admin")',
                dataType: 'json',
                data: { uid: $("#CountryList").val() },
                success: function (states) {
                    $.each(states, function (i, state) {
                        $("#StateList").append('<option value="' + state.Value + '">' +
                            state.Text + '</option>');
                    });
                }, error: function (ex) { $("#StateList").append('<option value="' + "" + '">' + "<< Select State>>" + '</option>'); }
            }); return false;
        })
    });
</script>
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/angular.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/dirPagination.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/Admin/Content/AngularJs/EventReport.js")"></script>
}