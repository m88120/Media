@model AllYouMedia.Areas.Admin.Models.EventPerformerModel
@{
    ViewBag.Title = "Event Performer";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="profile-contain">
    <div class="col-md-12">
        <div class="col-xl-12 col-md-12 col-xs-12">
            <div class="content">
                <div class="row">
                    <div class="col-xl-5 col-md-5 col-xs-12">
                        @using (Ajax.BeginForm("EventPerformer", "Admin", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "EventPerformer" }, new { enctype = "multipart/form-data" }))
                        {
                            <div id="EventPerformer" class="">
                                <h4 class="page-content-title">Add New Performer</h4>
                                <div class="well">
                                    <div class="user-name-profile col-xl-12 col-md-12 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Event Name :</div>
                                        <div class="form-group">
                                            @Html.DropDownListFor(model => model.EventList, new SelectList(Model.EventList, "Value", "Text", ViewData["EventList"]), new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.EventList, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="user-name-profile col-xl-12 col-md-12 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Performer Name :</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.PerformerName, new { @class = "form-control", placeholder = "Enter Performer Name", maxlength = "50" })
                                            @Html.ValidationMessageFor(model => model.PerformerName, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-12 col-md-12 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Category :</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Category, new { @class = "form-control", placeholder = "Enter Category", maxlength = "50" })
                                            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-12 col-md-12 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Description:</div>
                                        <div class="form-group">
                                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Enter Description", maxlength = "250" })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-xl-12 col-md-12 col-xs-12">
                                        <div class="row">
                                            <div class="user-name-profile col-xl-6 col-md-6 col-xs-12">
                                                <div class="left-name-profile float-xs-left">Fee :</div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.Fee, new { @class = "form-control", placeholder = "Enter Fee", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.Fee, "", new { @class = "validation" })
                                                </div>
                                            </div>
                                            <div class="user-name-profile col-xl-6 col-md-6 col-xs-12">
                                                <div class="left-name-profile float-xs-left">Date :</div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.Date, new { @class = "datepicker form-control", placeholder = "Select Date", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "validation" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-12 col-md-12 col-xs-12">
                                        <div class="row">
                                            <div class="user-name-profile col-xl-6 col-md-6 col-xs-6">
                                                <div class="left-name-profile float-xs-left">TimeFrom :</div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.TimeFrom, new { @class = "time form-control", placeholder = "Select TimeFrom", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.TimeFrom, "", new { @class = "validation" })
                                                </div>

                                            </div>
                                            <div class="user-name-profile col-xl-6 col-md-6 col-xs-6">
                                                <div class="left-name-profile float-xs-left">TimeTo :</div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.TimeTo, new { @class = "time form-control", placeholder = "Select TimeTo", maxlength = "10" })
                                                    @Html.ValidationMessageFor(model => model.TimeTo, "", new { @class = "validation" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="user-name-profile col-xl-12 col-md-12 col-xs-12">
                                        <div class="left-name-profile float-xs-left">Event Image :</div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.file, "", new { @class = "form-control", @type = "file" })
                                            @Html.ValidationMessageFor(model => model.file, "", new { @class = "validation" })
                                        </div>
                                    </div>
                                    <div id="DivImageurl" class="user-name-profile col-xl-4 col-md-4 col-xs-6 hidden">
                                        <div class="left-name-profile float-xs-left">Current Image :</div>
                                        <div class="form-group">
                                            <img id="ImageUrl" name="ImgUrl" src="" />
                                        </div>
                                    </div>
                                    <div class="divider-lg-spacing"></div>
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="tab-pane active btn-margin" id="basic-buttons">
                                            <input id="Save" type="submit" name="actionType" value="Add" class="btn btn-primary" />
                                        </div>
                                    </div>
                                    <div class="divider15"></div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-xl-7 col-md-7 col-xs-12">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <h4 class="page-content-title">Event Performer Report</h4>
                            @Html.Partial("~/Areas/Admin/Views/Admin/_EventPerformerReport.cshtml")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/angular.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/dirPagination.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/Admin/Content/AngularJs/EventPerformerReport.js")"></script>
}


